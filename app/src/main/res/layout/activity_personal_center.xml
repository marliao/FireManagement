<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Admin.PersonalCenterActivity">

    <com.firemanagement.view.CustomTitleBar
        android:id="@+id/ctb_personal_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/go_back"
        app:middleTitle="个人中心"
        app:rightTextSize="16sp"
        app:rightTitle="修改"></com.firemanagement.view.CustomTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="XXXX"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_head_portrait"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/touxiang" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6FAFD"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="用户名"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/dp_20"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="性别"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinner_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:entries="@array/spinner_sex"
                        android:paddingLeft="@dimen/dp_20"></Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="年龄"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingLeft="@dimen/dp_20"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="联系电话"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/dp_20"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="职务"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_position"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/dp_20"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="所属支队"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinner_subordinate_detachment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_personal_center"
                        android:entries="@array/spinner_subordinate_detachment"
                        android:paddingLeft="@dimen/dp_20"></Spinner>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>