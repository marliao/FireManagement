<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:text="15:30 ~ 16:30"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#262525"
        android:drawableLeft="@drawable/log"
        android:gravity="right"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/fillet"
             android:paddingTop="@dimen/dp_14"
             android:paddingBottom="@dimen/dp_14"
             android:paddingRight="@dimen/dp_30"
             android:paddingLeft="@dimen/dp_30"
            >
            <ImageView
                android:id="@+id/iv_u_icon"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_15"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
            <TextView
                android:id="@+id/tv_duty_Officer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="执勤人员:"
                android:textColor="#262525"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_employees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接班人员："
                android:textColor="#262525"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                />
            <!--<TextView-->
                <!--android:id="@+id/tv_position_Status"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="人员情况："-->
                <!--android:textColor="#262525"-->
                <!--android:textSize="@dimen/dp_15"-->
                <!--android:layout_marginTop="@dimen/dp_5"-->
                <!--/>-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>