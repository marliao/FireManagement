<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3FBFD"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属单位"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner_subordinate_detachment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:entries="@array/spinner_subordinate_detachment"
                    android:paddingLeft="@dimen/dp_20"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备类型"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner_vehicle_equipment_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:entries="@array/spinner_equipment"
                    android:paddingLeft="@dimen/dp_20"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备名称"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner_equipment_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:paddingLeft="@dimen/dp_20"></Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备分类"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_equipment_classification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dp_20"
                    android:singleLine="true" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备数量"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_equipment_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:inputType="text"
                    android:maxLines="10"
                    android:paddingLeft="@dimen/dp_20" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备用途"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et__equipment_use"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:inputType="text"
                    android:maxLines="10"
                    android:paddingLeft="@dimen/dp_20" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备组成"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et__equipment_composition"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/bg_personal_center"
                    android:inputType="text"
                    android:maxLines="10"
                    android:paddingLeft="@dimen/dp_20" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_personal_center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传图片："
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:src="@drawable/add_picture" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_new_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_button"
                    android:text="取消"
                    android:textColor="#FFF"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/btn_determine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red_button"
                    android:text="确定"
                    android:textColor="#FFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>